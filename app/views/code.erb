	has_one :<%=tab_name(@tables,rel,3)%><%end%><%if ass_check(rel,"has_one") && con_check(rel,"through")%>
	has_one :<%=tab_name(@tables,rel,3)%>, through: :<%=tab_name(@tables,rel,5)%><%end%><%if ass_check(rel,"has_many") && con_check(rel, "NA")%>
