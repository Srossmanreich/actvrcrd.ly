	belongs_to :<%=tab_name(@tables,rel)%><%end%><%if ass_check(rel,"has_belongs_many") && con_check(rel,"NA")%>
	has_and_belongs_to_many :<%=tab_name(@tables,rel,2)%><%end%><%if ass_check(rel,"has_many_poly")%>
