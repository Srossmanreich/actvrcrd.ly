	has_and_belongs_to_many :<%=tab_name(@tables,rel,4)%><%end%><%if ass_check(rel,"has_many_poly") && @poly_check != rel.origin_id%>
	belongs_to :<%=poly_name(@tables,rel)%>, polymorphic: true<%@poly_check=rel.origin_id%><%end%><%end%><%end%>
